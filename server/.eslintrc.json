{
    "env": {
        "browser": true,
        "node": true
    },
    "extends": "standard",
    "globals": {
        "angular": true,
	    "_": true
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single",
            { "allowTemplateLiterals": true }
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-tabs": "off",
        "comma-dangle": ["error", {
            "arrays": "always-multiline",
            "objects": "always-multiline",
            "imports": "never",
            "exports": "never",
            "functions": "never"
        }],
        "no-console": "warn",
        "max-len": [1, 100],
        "arrow-parens": "error",
        "new-cap": "off",
        "no-useless-escape": "warn",
        "camelcase": "off",
        "padded-blocks": "off"
    }
}
